<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ar.edu.unlp.info.cedica.razasypelajescedica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Main"
            android:label="@string/app_name">
            android:screenOrientation="landscape"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Configuration"
            android:label="@string/settings"
            android:screenOrientation="landscape"
        />

        <activity
            android:name=".game.Crosses"
            android:label="@string/minigame_races_coats"
            android:screenOrientation="landscape"
        />

        <activity
            android:name=".game.RacesCoats"
            android:label="@string/minigame_crosses"
            android:screenOrientation="landscape"
        />

        <activity
            android:name=".Help"
            android:label="@string/help"
            android:screenOrientation="landscape"
        />

        <activity
            android:name=".game.Win"
            android:screenOrientation="landscape"
         />

        <activity
            android:name=".game.Lose"
            android:screenOrientation="landscape"
        />
    </application>

</manifest>